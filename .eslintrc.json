{
  "parser": "espree",
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "jest",
    "import"
  ],
  "settings": {
    "import/resolver": "node"
  },
  "extends": [
    "airbnb-base",
    "plugin:import/recommended",
    "plugin:jest/recommended",
    "plugin:node/recommended-script"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "padded-blocks": "off"
  }
}
